output "ip" {
  value = "${aws_instance.my-instance.*.public_ip}"
}

terraform show -json | jq . > state.json

terraform show public_ip_address

az network public-ip list | jq . > ip-addresses.json



grep -E -o "([0-9]{1,3}[\.]){3}[0-9]{1,3}" ip-addresses.json

value = join(",",azurerm_linux_virtual_machine.spot_linux_vm[*].public_ip_address)

terraform output public_ip_address

terraform output -json public_ip_address | jq -r '.[0]' 

terraform output -raw public_ip_address

cat hosts.ini | tr -d '[,],"' 

tr -d '[,],"'  < hosts.ini > hosts2.ini 

sed 's/[]\[",]//g' hosts

sed -i 's/[]\[",]//g' hosts.ini 

 sed -i 's/ //g' hosts.ini 

sed -i '0,/^/s//[Azure]/' hosts.ini 

terraform plan -target null_resource.ansible_hosts

terraform plan -target output.public_ip_address

terraform apply -target null_resource.ansible_hosts

terraform destroy 






